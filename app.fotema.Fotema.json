{
  "id": "app.fotema.Fotema",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable",
    "org.freedesktop.Sdk.Extension.llvm18"
  ],
  "command": "fotema",
  "finish-args": [
    "--device=dri",
    "--share=ipc",
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--filesystem=xdg-pictures:ro",
    "--env=RUST_BACKTRACE=0",
    "--env=RUST_LOG=fotema=warn,relm4=warn,glycin=warn"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm18/bin"
  },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],

    "add-extensions": {
        "app.fotema.Fotema.HEIC": {
            "directory": "lib/libheif-heic",
            "add-ld-path": "lib",
            "bundle": true,
            "autodelete": true
        }
    },

  "modules": [
    "modules/libde265.json",
    "modules/libheif.json",
    "modules/glycin-loaders.json",
    "modules/ffmpeg.json",
    "modules/libshumate.json",
    {
      "name": "fotema",
      "buildsystem": "meson",
      "run-tests": false,
      "config-opts": [
        "-Dprofile=default"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/blissd/fotema/releases/download/v1.9.4/fotema-1.9.4.tar.xz",
          "sha256": "7c140a2c531bba9252d9bcee34bc64667c3302c6a56d39010315c2b739382a75"
        }
      ]
    }
  ]
}
