{
  "id": "app.fotema.Fotema",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable",
    "org.freedesktop.Sdk.Extension.llvm18"
  ],
  "command": "fotema",
  "finish-args": [
    "--device=dri",
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--filesystem=xdg-pictures:ro",
    "--env=RUST_BACKTRACE=1"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm18/bin"
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/lib/cmake",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "add-extensions": {
    "app.fotema.Fotema.HEIC": {
      "directory": "lib/libheif-heic",
      "add-ld-path": "lib",
      "bundle": true,
      "autodelete": true
    }
  },
  "modules": [
    "modules/libde265.json",
    "modules/libheif.json",
    "modules/glycin-loaders.json",
    "modules/ffmpeg.json",
    {
      "name": "fotema",
      "buildsystem": "meson",
      "run-tests": false,
      "config-opts": [
        "-Dprofile=default"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/blissd/fotema/releases/download/v1.0.0/fotema-1.0.0.tar.xz",
          "sha256": "e3bb88c8f0d3c3f3e0002d7fc2ca353ee77ae437dd5684e5228c24b84ff113e1"
        }
      ]
    }
  ]
}
